<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_gravity="center"
    android:layout_height="120dp">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:padding="10dp"
      android:background="#AEE2FF"
      android:layout_height="match_parent">

      <TextView
          android:id="@+id/dateAndDay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="3dp"
          android:layout_marginTop="3dp"
          android:layout_marginEnd="3dp"
          android:layout_marginBottom="3dp"
          android:text="Day and Date" />

      <TextView
          android:id="@+id/dayAndDayShow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/dateAndDay"
          android:layout_marginStart="2dp"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="2dp"
          android:layout_marginBottom="2dp"
          android:text="Sat,06,Nov,2021" />
      <TextView
          android:layout_margin="2dp"
          android:layout_below="@id/dayAndDayShow"
          android:id="@+id/amout"
          android:layout_width="wrap_content"
          android:text="Amount"
          android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/amountShow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/amout"
          android:layout_marginStart="2dp"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="2dp"
          android:layout_marginBottom="2dp"
          android:text="Rs. 1039" />
    <TextView
        android:layout_margin="2dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:text="Time"
        android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/timeShow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/time"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="2dp"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="2dp"
          android:layout_marginBottom="2dp"
          android:text="05:22:06 GMT" />
    <TextView
        android:layout_margin="2dp"
        android:layout_below="@id/timeShow"
        android:layout_alignParentEnd="true"
        android:id="@+id/transactionID"
        android:layout_width="wrap_content"
        android:text="Transaction ID"
        android:layout_height="wrap_content"/>

      <TextView
          android:id="@+id/transactionIDshow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/transactionID"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="2dp"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="2dp"
          android:layout_marginBottom="2dp"
          android:text="pay_IIDaf3fdhj" />
  </RelativeLayout>

</androidx.cardview.widget.CardView>